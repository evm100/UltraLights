# Web
WEB_HOST=0.0.0.0
WEB_PORT=8000
PUBLIC_BASE=https://lights.evm100.org
LAN_PUBLIC_BASE=https://lan.lights.evm100.org

# TLS (Let’s Encrypt paths)
SSL_CERTFILE=/etc/letsencrypt/live/lights.evm100.org/fullchain.pem
SSL_KEYFILE=/etc/letsencrypt/live/lights.evm100.org/privkey.pem

# MQTT
BROKER_HOST=127.0.0.1
BROKER_PORT=1883
EMBED_BROKER=0

# Firmware dir & security
FIRMWARE_DIR=/srv/firmware
API_BEARER=super-long-random-bearer

# HMAC key for signing manifests (hex or raw). Use your actual hex:
MANIFEST_HMAC_SECRET=5dc0084093b39dda7bee331e8bd3a21d35f7fb4bbfc446b6ade1ffe7ed475f7f

# Registry (declare your nodes here) – keep JSON on ONE line, single-quoted
DEVICE_REGISTRY_JSON='[{"id":"UltraNode1","name":"Living Room Strip","kind":"rgb"},{"id":"UltraNode2","name":"Desk Lamp","kind":"white"}]'

# Topics (compat)
MQTT_COMPAT_PUBLISH_BOTH=1
LEGACY_TOPIC_COLOR=strip/cmd/color
LEGACY_TOPIC_EFFECT=strip/cmd/effect
LEGACY_TOPIC_SPACEY=strip/cmd/spacey
LEGACY_TOPIC_OTA=strip/cmd/ota
